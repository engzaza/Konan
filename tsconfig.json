{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "baseUrl": "./src", // Optional: For shorter import paths
    "paths": {
      "@hooks/*": ["hooks/*"], // Optional: Alias for hooks
      "@components/*": ["components/*"],
      "@types/*": ["types/*"]
    },
    "resolveJsonModule": true, // Optional: For importing JSON files
    "sourceMap": true // Optional: For better debugging
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
